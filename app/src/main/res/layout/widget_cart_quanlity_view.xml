<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/ivSub"
        android:layout_width="@dimen/px40dp"
        android:layout_height="@dimen/px40dp"
        android:background="@mipmap/ic_jian_nor">


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etQuanlity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px0dp"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="number"
            android:minWidth="@dimen/px80dp"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/title_text_33_content"
            android:textSize="@dimen/px32dp" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/ivAdd"
        android:layout_width="@dimen/px40dp"
        android:layout_height="@dimen/px40dp"
        android:background="@mipmap/ic_jia">


    </RelativeLayout>


</LinearLayout>