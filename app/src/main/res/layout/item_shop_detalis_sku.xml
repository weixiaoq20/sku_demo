<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px24dp"
        android:layout_marginRight="@dimen/px24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSKUName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20dp"
            android:textColor="@color/title_text_33_content"
            android:textSize="@dimen/px28dp"
            tools:text="规格1" />


        <sports.demo.com.myapplication.widget.MultiLineRadioGroup
            android:id="@+id/multiRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20dp"
            android:layout_marginBottom="@dimen/px20dp"
            app:chooseMode="single"
            app:horizontalSpacing="@dimen/px12dp"
            app:verticalSpacing="@dimen/px12dp" />

    </LinearLayout>
</LinearLayout>